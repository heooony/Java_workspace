package cleaning;

public class Student {
	private String name [];
	private String pickedName [];
	private int pickedNum [];
	private int total;
	
	Student() {

	}
	Student(int total) {
		name = new String[]
				{
					"±èµ¿Çå", "±èµ¿Çö", "±è¹Î¼·", "±è¼ºÈñ", "±è¼Ò¿µ",
					"±è½Â¿ø", "±è½ÂÈ¯", "±èÁ¤Èñ", "¹Ú±âÇö", "¹Ú¼ºÁ¾",
					"¹èÀºÁø", "¼­Á¤¿ì", "½É±âÈÆ", "¿Àµ¿¼Ò", "¿ì¼öÇö",
					"ÀÌ½ÂÇö", "Á¶¹ÎÁÖ", "Â÷¿µ¿ì", "ÃÖ¼öºó", "ÃÖÀºÃ¶",
					"ÃÖÁ¤³²", "ÃÖÈÆ¼®", "È²º¸Çö"
				};
		this.total = total;
		pickedName = new String[total];
	}
	
	public String[] getStudent() {
		for(int i = 0; i < total; i++) {
			boolean isIt = false;
			int randNum = 0;
			do {
				randNum = (int)(Math.random() * name.length) + 1;
				isIt = isDuplicate(randNum);
			}while(isIt);
			
			pickedName[i] = name[randNum];
		}
		return pickedName;
	}
	
	public boolean isDuplicate(int randNum) {
		if(total == 0) return true;
		for(int i = 0; i < total; i++) {
			if(randNum == pickedNum[i]) {
				return false;
			}
		}
		return true;
	}
	
	public void print() {
		for(int i = 0; i < total; i++)
			System.out.print(pickedName[i] + "´Ô, ");
	}
}
